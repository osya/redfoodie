@model redfoodie.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
}
<h2 style="margin-top:50px">@ViewBag.Title.</h2>
<h3>Associate your @ViewBag.LoginProvider account.</h3>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new {ViewBag.ReturnUrl }, FormMethod.Post, new { id = "ExternalLoginConfirmation", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Association Form</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p class="text-info">
        You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
        Please enter a user email for this site below and click the Register button to finish
        logging in.
    </p>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            @Html.TextBoxFor(m => m.Email, true, null, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Email), title = Html.DisplayNameFor(m => m.Email) })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#ExternalLoginConfirmation").validate();
    </script>
}
